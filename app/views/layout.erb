<!DOCTYPE html>
<html>

<head>
  <title>RandBNB</title>
</head>

<body>
  <div>
    <% if flash[:error] %>
      <%= flash[:error] %>
    <% end %>
  </div>

<div>
  <% if flash[:notice] %>
    <%= flash[:notice] %>
  <% end %>
</div>

<% if current_user %>
<div>
  <form action='/sessions' method ='post'>
    <input type='hidden' name='_method' value='delete'>
    <input type='submit' value='Sign Out'>
  </form>
</div>
<% end %>

  <%= yield %>

</body>
</html>
